{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://context.dev/schemas/selection-result-v0.json",
  "title": "Selection Result v0",
  "type": "object",
  "required": ["documents", "selection"],
  "additionalProperties": false,
  "properties": {
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "version", "content", "score", "tokens", "why"],
        "additionalProperties": false,
        "properties": {
          "id": { "type": "string", "minLength": 1 },
          "version": { "type": "string", "pattern": "^sha256:[a-f0-9]{64}$" },
          "content": { "type": "string" },
          "score": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "tokens": { "type": "integer", "minimum": 0 },
          "why": {
            "type": "object",
            "required": ["query_terms", "term_matches", "total_words"],
            "additionalProperties": false,
            "properties": {
              "query_terms": {
                "type": "array",
                "items": { "type": "string" }
              },
              "term_matches": { "type": "integer", "minimum": 0 },
              "total_words": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    },
    "selection": {
      "type": "object",
      "required": ["query", "budget", "tokens_used", "documents_considered", "documents_selected", "documents_excluded_by_budget"],
      "additionalProperties": false,
      "properties": {
        "query": { "type": "string" },
        "budget": { "type": "integer", "minimum": 0 },
        "tokens_used": { "type": "integer", "minimum": 0 },
        "documents_considered": { "type": "integer", "minimum": 0 },
        "documents_selected": { "type": "integer", "minimum": 0 },
        "documents_excluded_by_budget": { "type": "integer", "minimum": 0 }
      }
    }
  }
}